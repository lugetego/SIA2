    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('css/custom.css', absolute=true) }}" type="text/css"/>


{% endblock %}

{% block body %}
    {# Layout for PDF files #}

    {% block content %}

        <div class="print-area">
            <div class="row page-header">
                <div class="col-xs-5">
                    <p><small><strong>Acad√©mico:</strong> {{ academico.nombre }} {{ academico.apellido }}</small> </p>
                    <p>Informe de actividades 2016</p>

                </div>
                <div class="col-xs-7">
              {#       <p class="text-right"><img class="right" src="{{ asset('img/ccm.png', absolute=true) }}" width="180px" height="60px" /></p>   #}
                    <p class="text-justify small alert-warning"> Dictamen del Consejo Interno: <strong>{{ academico.aprobado }}</strong><br>
                    <small>{{ academico.observaciones }}</small></p>

                </div>
            </div>

            {% for tecnico in tecnicos %}

                {% if tecnico.informe %}

                    <p class="text-justify"><small>{{ tecnico.informe| nl2br }}</small></p>

                {% endif %}


            {% endfor %}


                <div class="row page-header">
                    <div class="col-xs-6">
                        <h5>Plan de trabajo 2017</h5>
                    </div>
                </div>
                {% for tecnico in tecnicos %}

                    {% if tecnico.plan %}

                        <p class="text-justify"><small>{{ tecnico.plan| nl2br }}</small></p>
                    {% endif %}

                {% endfor %}



        </div>



    {% endblock %}

{% endblock %}