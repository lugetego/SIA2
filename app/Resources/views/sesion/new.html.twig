{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker3.css') }}">
{% endblock %}

{% block sidebar %}
    <li class="nav-item">
        <a class="nav-link active" href="{{ path('dashboard') }}">
            Dashboard <span class="sr-only">(current)</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ path('sesion_index') }}">
            <span data-feather="file"></span>
            Sesiones
        </a>
    </li>
{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white border-bottom">
            <li class="breadcrumb-item"><a href="{{ path('sesion_index') }}">Sesiones</a></li>
            <li class="breadcrumb-item active" aria-current="page">Nueva sesión</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title text-secondary">Nueva sesión</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="form-group col-md-6">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.name) }}</div>
                </div>
                <div class="form-group col-md-6">
                    <div>
                        {{ form_label(form.fecha) }}
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                        {{ form_widget(form.fecha, {'attr': {'class': 'form-control js-datepicker'}}) }}
                    </div>
                    <div>{{ form_errors(form.fecha) }}</div>
                </div>
            </div>
            <input type="submit" value="Guardar"  class="btn btn-primary my-4"/>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="{{ asset('js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datepicker.es.min.js') }}"></script>
    <script>
        $(".date-picker").datepicker();

        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd',
                language: 'es',
                orientation: "auto bottom"
            });
        });
    </script>
{% endblock %}