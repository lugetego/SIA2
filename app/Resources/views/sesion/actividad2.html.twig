<div class="bt">
<strong>{{ actividad.tipo }}</strong><br>
{% if actividad.anfitrion %}
    <span class="label label-default">{{ actividad.anfitrion }}</span><br>
{% endif %}
{%  if actividad.nombreEvento %}
    {% if actividad.tipo starts with 'Coloquio' %}
        <strong>{{ actividad.nombreEvento }}</strong><br>
    {% endif %}
{% endif %}
{% if actividad.tituloTrabajo %}
    {% if actividad.tipo == "Investigación" %}
        Trabajo: <em>{{ actividad.tituloTrabajo }}</em><br>
    {% else %}
        Plática: <em>{{ actividad.tituloTrabajo }}</em><br>
    {% endif %}
{% endif %}
{{ actividad.institucion }}, {{ actividad.departamento }}<br>
{{ actividad.lugar }}
{% if actividad.sinodalAlumno %}
    <br>Estudiante  {{ actividad.sinodalGrado }}: {{ actividad.sinodalAlumno }}<br>
{% endif %}
</div>
