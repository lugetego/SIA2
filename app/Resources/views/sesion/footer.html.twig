<html>
<head>
    <meta charset="utf-8">
    <script>
        /* page counter */
        function subst() {
            var vars={};
            var x=document.location.search.substring(1).split('&');
            for (var i in x) {var z=x[i].split('=',2);vars[z[0]] = unescape(z[1]);}
            var x=['topage','page'];
            for (var i in x) {
                var y = document.getElementsByClassName(x[i]);
                for (var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
            }
        }
    </script>
</head>
<body onload="subst()">
<footer>

    <p class="footer text-center">Hoja <span class="page"></span> de <span class="topage"></span></p>
    {#<p class="text-center"><img class="right" src="{{ asset('img/linea.png', absolute=true) }}" /></p>#}

</footer>
</body>
</html>