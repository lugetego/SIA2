{% extends 'base.html.twig' %}

{% block sidebar %}
    <li class="nav-item">
        <a class="nav-link active" href="{{ path('dashboard') }}">
            Dashboard <span class="sr-only">(current)</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ path('sesion_index') }}">
            <span data-feather="file"></span>
            Sesiones
        </a>
    </li>
{% endblock %}

{% block body %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white boder-bottom">
            <li  class="breadcrumb-item"><a href="{{ path('sesion_show',{'slug':sesion.slug}) }}">Sesión {{ sesion.name }}</a></li>
            <li class=" breadcrumb-item active" aria-current="page">Recomendaciones {{ sesion.name }}
                ({{ sesion.fecha|localizeddate('none', 'none', 'es_MX', null, "cccc, d MMMM Y") }})

            </li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md6">
            <a class="nav-link" href="{{ path('sesion_recomendaciones', { 'slug': sesion.slug }) }}">
                <span data-feather="file"></span>
                Recomendaciones {{ sesion.name }}
            </a>
        </div>
        <div class="col-md6">
            <a class="nav-link" href="{{ path('sesion_recomendaciones_pdf',{'slug':sesion.slug}) }}"><i class="fa fa-file"></i> PDF</a>
        </div>
    </div>

    {% set ordenmodaledit = 'ordeneditModal'~ sesion.id  %}



    <br>
    <p><strong>Orden del día</strong>  <button type="button" class="btn btn-sm btn-link" data-toggle="modal" data-target="#{{ ordenmodaledit }}">
            <i class="fa fa-edit"></i>
        </button></p>

    <div>
        {{ sesion.orden|nl2br }}
    </div>

    <!-- Modal -->
    <div class="modal fade" id="{{ ordenmodaledit }}" tabindex="-1" role="dialog" aria-labelledby="{{ ordenmodaledit }}Label" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="{{ ordenmodaledit }}Label"> {{ sesion.name }} </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {% render controller("SiaBundle:Sesion:orden", {'slug': sesion.slug}) %}
                </div>
            </div>
        </div>
    </div>
    <br>

    <p><strong>Licencias</strong></p>
    {% set i = 1 %}

    {% for solicitud in sesion.solicitudes %}

        <p>L{{ i }}. <strong>{{ solicitud.academico.apellido }} {{ solicitud.academico.nombre }}</strong>. Del  {{ solicitud.fechaInicio|localizeddate('long', 'none') }} al {{ solicitud.fechaFin |localizeddate('long', 'none') }}.</p>
        <ul>
            {% for actividad in solicitud.actividades %}
                {#<li>{{ render(controller('AppBundle\\Controller\\ActividadController::recomendacion', { 'id': {{ actividad.id }} })) }}</li>#}
                <li>{% include 'sesion/actividad.html.twig' with {'actividad': actividad } %}</li>
            {% endfor %}
        </ul>
        {# Financiamiento #}
        {# Hay financiamiento ?#}
        {% set solicitaFinanciamiento = 0 %}

        {% for fin in solicitud.financiamiento %}
            {% if fin.ccm or fin.papiit or fin.conacyt or fin.otro %}
                {% set solicitaFinanciamiento = 1 %}
            {% endif %}
        {% endfor %}

        {% if solicitaFinanciamiento %}
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <table class="table table-striped table-bordered table-sm">
                        <thead>
                        <tr>
                            <th class="text-center">Fuente</th>
                            <th class="text-center">CCM</th>
                            <th class="text-center">PAPIIT</th>
                            <th class="text-center">Conacyt</th>
                            <th class="text-center">Otro</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set ccm = 0 %}
                        {% set papiit = 0 %}
                        {% set conacyt = 0 %}
                        {% set otro = 0 %}

                        {% for fin in solicitud.financiamiento %}
                            {% if fin.ccm or fin.papiit or fin.conacyt or fin.otro %}
                                <tr>
                                    <td>{{ fin.nombre }}</td>
                                    <td class="text-right">${{ fin.ccm|number_format(2)  }}</td>
                                    <td class="text-right">${{ fin.papiit|number_format(2)  }}</td>
                                    <td class="text-right">${{ fin.conacyt|number_format(2)  }}</td>
                                    <td class="text-right">{{ fin.otro  }}</td>
                                </tr>
                                {% set ccm = fin.ccm + ccm %}
                                {% set papiit = fin.papiit + papiit %}
                                {% set conacyt = fin.conacyt + conacyt %}
                                {% set otro = fin.otro + otro %}
                            {% endif %}
                        {% endfor %}
                        <tr>
                            <td><h6><i class="fa fa-usd"></i> Total</td>
                            <td class="text-right"><h6><strong>${{ ccm|number_format(2) }}</strong></h6></td>
                            <td class="text-right"><h6><strong>${{ papiit|number_format(2)  }}</strong></h6></td>
                            <td class="text-right"><h6><strong>${{ conacyt|number_format(2)  }}</strong></h6></td>
                            <td class="text-right"><h6><strong></strong></h6></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        {% endif %}

        {% set i = i + 1 %}
    {% endfor %}

    {% set variosmodaledit = 'varioseditModal'~ sesion.id  %}

    <p><strong>Varios</strong>
        <button type="button" class="btn btn-sm btn-link" data-toggle="modal" data-target="#{{ variosmodaledit }}">
            <i class="fa fa-edit"></i>
        </button>
    </p>

    <!-- Modal -->
    <div class="modal fade" id="{{ variosmodaledit }}" tabindex="-1" role="dialog" aria-labelledby="{{ variosmodaledit }}Label" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="{{ variosmodaledit }}Label"> {{ sesion.name }} </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {% render controller("SiaBundle:Sesion:varios", {'slug': sesion.slug}) %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}