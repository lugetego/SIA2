
{% block body %}

    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {'action': path('complementaria_financiamiento', { 'id': complementaria.id})}) }}

            {{ form_errors(form) }}

            <div ng-controller="DatepickerDemoCtrl" class="form-group">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="text-center">Fuente de financiamiento</th>
                            <th class="text-center">CCM</th>
                            <th class="text-center">PAPIIT</th>
                            <th class="text-center">Conacyt</th>
                            <th class="text-center">Otro</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% set i = -1 %}
                        {% for fin in form.financiamiento %}
                            {% set i = i + 1 %}
                            <tr>
                                <td>
                                    {% if fin.nombre is defined %}
                                        {{ form_widget(fin.nombre, { 'attr':{
                                            'class': 'form-control input-sm ',
                                            'readonly':'true'
                                        } })
                                        }}
                                    {% endif %}
                                </td>

                                {% set ccmid = 'ccm' ~ i %}

                                <td>
                                    {% if fin.ccm is defined %}
                                        {{ form_widget(fin.ccm, {'attr':{
                                            'class': 'form-control input-sm text-right',
                                            'ng-model': ccmid, 'ng-init': ccmid ~ ' = ' ~ complementaria.financiamiento[i].ccm,
                                            'type': 'number', 'step' : '0.01',
                                        } }) }}
                                        {{ form_errors(fin.ccm) }}
                                    {% endif %}
                                </td>

                                {% set papiitid = 'papiit' ~ i %}

                                <td>
                                    {% if fin.papiit is defined %}

                                        {{ form_widget(fin.papiit, { 'attr':{
                                            'class': 'form-control input-sm text-right',
                                            'ng-model': papiitid, 'ng-init': papiitid ~ ' = ' ~ complementaria.financiamiento[i].papiit,
                                            'type': 'number', 'step' : '0.01',
                                        } }) }}
                                        {{ form_errors(fin.papiit) }}
                                    {% endif %}
                                </td>

                                {% set conacytid = 'conacyt' ~ i %}

                                <td>
                                    {% if fin.conacyt is defined %}

                                    {{ form_widget(fin.conacyt, { 'attr':{
                                        'class': 'form-control input-sm text-right',
                                        'ng-model': conacytid, 'ng-init': conacytid ~ ' = ' ~ complementaria.financiamiento[i].conacyt,
                                        'type': 'number', 'step' : '0.001',
                                    } }) }}
                                    {{ form_errors(fin.conacyt) }}</td>

                                {% endif %}
                                {% set otroid = 'otro' ~ i %}


                                <td>
                                    {% if fin.otro is defined %}

                                        {{ form_widget(fin.otro, { 'attr':{
                                            'class': 'form-control input-sm ',

                                        } }) }}
                                        {{ form_errors(fin.otro) }}
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-md-7 offset-md-5">
                    <input type="submit" value="Guardar"  class="btn btn-primary"/>


                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
