{% extends 'base.html.twig' %}

{% block body %}
    <h1>Solicitudes</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for solicitud in solicituds %}
            <tr>
                <td><a href="{{ path('solicitud_show', { 'id': solicitud.id }) }}" >{{ solicitud.id }}</a></td>
                <td>{{ solicitud.tipo }}</td>

                <td>{{ solicitud.fechaInicio|localizeddate('long', 'none') }}</td>
                <td>{{ solicitud.fechaFin|localizeddate('long', 'none') }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('solicitud_show', { 'id': solicitud.id }) }}">show</a>
                        </li>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('solicitud_step') }}" class="btn btn-info" role="button">Nueva solicitud</a>



{% endblock %}
