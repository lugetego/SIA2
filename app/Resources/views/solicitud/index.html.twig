{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css"/>
    {#<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.5.1/css/buttons.bootstrap4.min.css"/>#}
{% endblock %}


    {% block sidebar %}
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('dashboard') }}">

                Dashboard <span class="sr-only">(current)</span>
            </a>
        </li>

        {% if is_granted("ROLE_ADMIN") %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('academico') }}">
                    <span data-feather="file"></span>
                    Academicos
                </a>
            </li>

        {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('solicitud_step') }}">
                    <span data-feather="file"></span>
                    Nueva solicitud
                </a>
            </li>

            {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                <li class="nav-item">
                    <a href="{{ path('dashboard', {'_switch_user': '_exit'}) }}">Finalizar sesión de {{app.user.username}}</a>
                </li>
            {% endif %}
        {% endif %}
    {% endblock %}


{% block body %}
    <a href="{{ path('solicitud_step') }}" class="btn btn-info mb-5" role="button"><i class="fa fa-plus"></i> Crear nueva solicitud</a>

    <table id="tablaSolicitudes" class="table table-hover table-bordered table-striped table-sm">

        <thead>
        <tr>
            {% if is_granted("ROLE_ADMIN") %}
                <th class="text-center">Académico</th>
            {% endif %}
            <th class="text-center">Tipo</th>
            <th class="text-center">Fechas</th>
            <th class="text-center">Estatus</th>
        </tr>
        </thead>
        <tbody>
        {% for solicitud in solicituds %}
            <tr>
                {% if is_granted("ROLE_ADMIN") %}
                    <td class="text-center">{{ solicitud.academico }}</td>
                {% endif %}
                <td><a href="{{ path('solicitud_show', { 'id': solicitud.id }) }}">{{ solicitud.tipo }}</a></td>
                {#<td class="text-center">#}
                {#{% if solicitud.ambito == true %}#}
                {#<span class="badge badge-secondary">Nacional</span>#}
                {#{% else %}#}
                {#<span class="badge badge-dark">Internacional</span>#}
                {#{% endif %}#}
                {#</td>#}
                <td>{{ solicitud.fechaInicio|localizeddate('long', 'none') }} al {{ solicitud.fechaFin|localizeddate('long', 'none') }}</td>
                <td class="text-center">{% if solicitud.enviado == true %}
                        <span class="badge badge-success">Enviada</span>
                    {% else %}
                        <span class="badge badge-warning">En proceso</span>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {#{{ parent() }}#}
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.1/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.bootstrap4.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.print.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.colVis.min.js"></script>



    <script>
        $(document).ready(function() {
            var table = $('#tablaSolicitudes').DataTable( {

//                lengthChange: false,
//                pageLength: 50,

                buttons: [
                    {
                        text: '<i class="fa fa-files-o"></i>',
                        titleAttr: 'Copiar',
                        extend: 'copyHtml5',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fa fa-file-text-o"></i>',
                        titleAttr: 'CSV separado por comas',
                        exportOptions: {
                            columns: ':visible'
                        },
                        fieldSeparator: ',',
                        extension: '.csv'
                    },

                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fa fa-file-pdf-o"></i>',
                        titleAttr: 'PDF',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend:'colvis',
                        text: 'Columnas'
                    }

                ],



            } );
            table.buttons().container()
                    .appendTo( '#example_wrapper .col-md-6:eq(0)' );
        } );
    </script>
{% endblock %}
