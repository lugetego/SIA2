{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker3.css') }}">

{% endblock %}


{% block body %}

    {{ form_start(edit_form, {'action': path('solicitud_edit', { 'id': solicitud.id})}) }}
    <div class="row">



        <div class="col-lg-3">
            <div class="form-group">
                <div>{{ form_label(edit_form.ambito) }}</div>
                <div class="custom-control custom-radio custom-control-inline">
                    {% spaceless %}
                        {% for child in edit_form.ambito %}
                            <div class="custom-control custom-radio custom-control-inline">
                                {{ form_widget(child, {'attr': {'class': 'custom-control-input'}}) }}
                                {{ form_label(child, null, {'label_attr': {'class': 'custom-control-label'}}) }}
                            </div>
                        {% endfor %}
                    {% endspaceless %}
                </div>
                <div>{{ form_errors(edit_form.ambito) }}</div>
            </div>
        </div>
    </div>



    <div class="row">

        {% if solicitud.cartaSolicitudName != null %}
            <div class="col-lg-4">
                <dl>
                    <dt>Carta Solicitud</dt>

                    <dd><a href="{{ vich_uploader_asset(solicitud, 'cartaSolicitudFile') }}"  target="_blank"/>{{ solicitud.cartaSolicitudName }}</a></dd>

                </dl>
            </div>
        {% endif %}
        {% if solicitud.cartaInvitacionName != null  %}
            <div class="col-lg-4">
                <dl>
                    <dt>Carta invitaci√≥n</dt>

                    <dd><a href="{{ vich_uploader_asset(solicitud, 'cartaInvitacionFile') }}"  target="_blank"/>{{ solicitud.cartaInvitacionName }}</a></dd>

                </dl>
            </div>
        {% endif %}
        {% if solicitud.planName  != null  %}
            <div class="col-lg-4">
                <dl>
                    <dt>Plan de trabajo</dt>

                    <dd><a href="{{ vich_uploader_asset(solicitud, 'planFile') }}"  target="_blank"/>{{ solicitud.planName }}</a></dd>

                </dl>
            </div>
        {% endif %}

        {% if edit_form.cartaSolicitudFile is defined %}
            <div class="col-lg-4">
                <dl>
                    <dd>{{ form_widget(edit_form.cartaSolicitudFile) }}</dd>
                </dl>
            </div>
        {% endif %}

        {% if edit_form.cartaInvitacionFile is defined %}
            <div class="col-lg-4">
                <dl>
                    <dd>{{ form_widget(edit_form.cartaInvitacionFile) }}</dd>
                </dl>
            </div>
        {% endif %}

        {% if edit_form.planFile is defined %}
            <div class="col-lg-4">
                <dl>
                    <dd>{{ form_widget(edit_form.planFile) }}</dd>
                </dl>

            </div>
        {% endif %}
    </div>


    <div class="form-row">
        <div class="col-lg-4">
            <div class="control-group">
                <div>
                    {{ form_label(edit_form.fechaInicio) }}
                </div>
                <div class="input-group date">
                    {{ form_widget(edit_form.fechaInicio, {'attr': {'class': 'form-control js-datepicker'}}) }}
                    <div class="input-group-text">
                        <label for="createSolicitud_fechaInicio" class="input-group-addon fa fa-calendar"></label>
                    </div>
                </div>
                <div>{{ form_errors(edit_form.fechaInicio) }}</div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <div>
                    {{ form_label(edit_form.fechaFin) }}
                </div>
                <div class="input-group date">
                    {{ form_widget(edit_form.fechaFin, {'attr': {'class': 'form-control js-datepicker2'}}) }}
                    <div class="input-group-text">
                        <label for="createSolicitud_fechaFin" class="input-group-addon fa fa-calendar"></label>
                    </div>
                </div>
                <div>{{ form_errors(edit_form.fechaFin) }}</div>
            </div>
        </div>

    </div>



    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <div>
                    {{ form_label(edit_form.descripcion) }}
                </div>
                <div>
                    {{ form_widget(edit_form.descripcion, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div>{{ form_errors(edit_form.descripcion) }}</div>
            </div>
        </div>
    </div>

    {{ form_widget(edit_form) }}

    <div class="row">
        <div class="col-lg-7 col-lg-offset-5">
            <input type="submit" value="Guardar"  class="btn btn-primary"/>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar</button>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="{{ asset('js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datepicker.es.min.js') }}"></script>
    <script src="{{ asset('js/moment.js') }}"></script>

    <script>
        $(".date-picker").datepicker();

        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd',
                language: 'es',
                orientation: "auto bottom"
            });
        });
    </script>
    <script>
        $(document).ready(function() {
            $('.js-datepicker2').datepicker({
                format: 'yyyy-MM-dd',
                orientation: "auto bottom"
            });
        });
    </script>



{% endblock %}