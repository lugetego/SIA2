{% extends 'base.html.twig' %}

    {% form_theme edit_form 'CcmSiaBundle::form_errors.html.twig' %}

    {% block wrapper %}


        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Modificar Acad√©mico</h1>
            </div>
        </div>


        {{ form_start(edit_form) }}

        <div class="row">
            <div class="col-lg-8">
                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.name) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control','placeholder': 'Nombre(s)'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.name) }}</div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.apellido) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.apellido, {'attr': {'class': 'form-control','placeholder': 'Apellido(s)'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.apellido) }}</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.nacimiento) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.nacimiento, {'attr': {'class': 'form-control', 'placeholder':'dd-mm-aaaa'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.nacimiento) }}</div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.rfc) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.rfc, {'attr': {'class': 'form-control', 'placeholder':'10 caracteres'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.rfc) }}</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.dias) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.dias, {'attr': {'class': 'form-control'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.dias) }}</div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.asignacion) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.asignacion, {'attr': {'class': 'form-control input-sm'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.asignacion) }}</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">

                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.user) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.user, {'attr': {'class': 'form-control'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.user) }}</div>
                    </div>
                </div>


            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="col-lg-12">
                    {{ form_widget(edit_form.save,{'attr':{'class':'btn btn-primary'} } )}}

                    <a href="{{ path('academico_show', { 'id': entity.id}) }}" type="button"  class="btn btn-danger">Cancelar</a>


                </div>
            </div>
        </div>

         {{ form_rest(edit_form) }}
         {{ form_end(edit_form) }}




    {% endblock %}



